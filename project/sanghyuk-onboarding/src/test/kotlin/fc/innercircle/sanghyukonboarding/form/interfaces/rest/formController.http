### Create a new form
POST http://localhost:8080/api/v1/forms
Content-Type: application/json

{
  "title": "티셔츠 신청 양식",
  "description": "티셔츠를 신청하세요.",
  "questions": [
    {
      "title": "귀하의 이름은 무엇입니까?",
      "description": "",
      "type": "RADIO",
      "required": true,
      "options": [
        "김상혁", "이상혁"
      ]
    },
    {
      "title": "귀하의 신장은 몇 cm 입니까?",
      "description": "",
      "type": "TEXT",
      "required": false,
      "options": [

      ]
    },
    {
      "title": "귀하의 사이즈는 몇 입니까?",
      "description": "",
      "type": "TEXT",
      "required": false,
      "options": [
      ]
    }
  ]
}

> {%
    // Location 헤더 전체를 가져오기
    const location = response.headers.valueOf("Location");
    // URL 마지막 슬래시 뒤의 formId만 추출
    const formId = location.substring(location.lastIndexOf('/') + 1);
    // 전역 변수로 저장
    client.global.set('formId', formId);
    client.log("Saved formId: " + formId);
%}

